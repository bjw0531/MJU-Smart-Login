{
    "name": "MJU Smart Login",
    "description": "명지대학교 통합 로그인 자동화",
    "version": "1.1",
    "manifest_version": 3,
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png",
        "512": "icons/512.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": [
                "https://sso1.mju.ac.kr/login.do*"
            ]
        }
    ],
    "permissions": [
        "storage",
        "identity",
        "identity.email"
    ],
    "host_permissions": [
        "https://sso1.mju.ac.kr/*"
    ]
}